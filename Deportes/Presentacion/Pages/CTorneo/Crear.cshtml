@page
@model Presentacion.Pages.CTorneo.CrearModel
@{
    ViewData["Title"] = "Crear Torneo";
}

<h1>Crear Torneo</h1>
<h2 class="">@ViewData["Error"]</h2>

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <table>
                        <tr>
                            <td><label asp-for="Torneo.Nombre"></label></td>
                            <td><input asp-for="Torneo.Nombre" /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="Torneo.Categoria"></label></td>
                            <td><input asp-for="Torneo.Categoria" /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="Torneo.F_Inicio">Fecha Inicio</label></td>
                            <td> <input asp-for="Torneo.F_Inicio" /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="Torneo.F_Fin">Fecha Fin</label></td>
                            <td> <input asp-for="Torneo.F_Fin" /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="Torneo.N_rondas">Num. Rondas</label></td>
                            <td> <input asp-for="Torneo.N_rondas" /></td>
                        </tr>
                        
                    </table>
                </div>
                <div class="form-group">
                    <input type="submit" value="CREAR" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="./Index">Ir al Inicio</a>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

