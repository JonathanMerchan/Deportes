@page
@model Presentacion.Pages.CCancha.DetalleModel
@{
    ViewData["Title"] = "Detalles Cancha";
}

<h1>Detalle Cancha</h1>
<h2 class="">@ViewData["Error"]</h2>

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <table>
                        <tr>
                            <td><label asp-for="ObjCancha.Id" hidden></label></td>
                            <td><input asp-for="ObjCancha.Id" hidden /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="ObjCancha.Nombre" readonly></label></td>
                            <td><input asp-for="ObjCancha.Nombre" readonly /></br></td>
                        </tr>
                        <tr>
                            <td><label asp-for="ObjCancha.Deporte"></label></td>
                            <td><input asp-for="ObjCancha.Deporte" readonly /></td>
                        <tr>
                            <td><label asp-for="ObjCancha.N_Espectadores"></label></td>
                            <td><input asp-for="ObjCancha.N_Espectadores" readonly /></td>
                        <tr>
                            <td><label asp-for="ObjCancha.Medidas"></label></td>
                            <td><input asp-for="ObjCancha.Medidas" readonly /></td>
                        <tr>
                            <td><label asp-for="ObjCancha.Id_escenario">Escenario (ID)</label></td>
                            <td>
                                <select asp-for="ObjCancha.Id_escenario" readonly>
                                    <option value="">Seleccione una opcion</option>
                                    @foreach (var item in Model.Esc)
                                    {
                                        <option value="@item.Id">@item.Nombre</option>
                                    }
                                </select>
                            </td>
                        </tr>
                    </table>
                </div>

            </form>
        </div>
    </div>
    <div>
        <a asp-page="./Index">Ir al Inicio</a>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

